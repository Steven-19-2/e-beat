          <ImageView
              android:id="@+id/dimg6.1"
              android:layout_width="69dp"
              android:layout_height="81dp"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="0dp"
              app:srcCompat="@drawable/pngtree_vector_fuel_station_icon_png_image_4015172" />

          <TextView
              android:id="@+id/text6"
